---
import PicHeader from "../components/Pics/PicHeader.astro";
import Footer from "../components/footer__EN.astro";
import "../styles/style.css"
import TopBar from "../components/TopBar__EN.astro";
---


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Woops! Wrong page">

    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <meta name="robots" content="noindex">


    <title>Woops! Are you lost?</title>
</head>
<body>
    <header class="header">
        <TopBar linkfr="/fr/"></TopBar>
        <div class="headerContainerPic">
            <PicHeader srcMobile="/pictures/404-header-mobile.webp" srcPC="/pictures/404-header-pc.webp" alt="Someone is lost in iceland" title="Lilja Tours travel agency"></PicHeader></div>
            <div class="headerGradient"></div>
            <div class="headerInfos">
                <h1>Woops! Seems like you got lost in Iceland</h1>
                <h2>Luckily, we are specialized in Guiding you!</h2>
                <h3>Use the navigation bar above this picture to find your way back!</h3>                
            </div>
        </div>

    </header>
    <Footer/>
</body>
</html>
<style>

    section {
        background-color: rgba(255, 255, 255, 0.75);
        margin: 5rem auto;
        padding: 3rem;
        
        border-radius: 1rem;

        h2 {
            font-style: normal;
            font-weight: bold;
            color:rgb(91, 114, 151);
            animation: none;
            opacity: 1;
        }

        h3 {
            color:rgb(91, 114, 151);

        }

        p {
            color: black;
        }

        strong {
            font-weight: normal;
        }
    }

    img {
        border-radius: 1rem;
        display: flex;
        margin: 2rem auto;

    }


    main {
        width: 75%;
        margin-inline: auto;
    }

    .header {
            min-height: 100dvh;
            width: 100%;
        }

        .headerContainerPic {
            width: 100%;
            min-height: calc(100dvh - 3.5rem);
            max-height: calc(100dvh - 3.5rem);
            position: relative;
        }

        .headerGradient {
            width: 100%;
            min-height: calc(100dvh - 3.5rem);
            max-height: calc(100dvh - 3.5rem);
            position: absolute;
            top: 3.5rem;
            background: linear-gradient(180deg, rgba(0, 0, 0, 0.75) 0%, rgba(255, 255, 255, 0.00) 99.06%);
        }

        .headerInfos {
            position: absolute;
            inset: 3.5rem 0 0 0;
            display: flex;
            height:  calc(100dvh - 3.5rem);
            flex-direction: column;
            justify-content: center;
            align-items: center;
            align-content: center;
            gap: 5rem;

        }

        h1 {
        color: #FFF;
        text-align: center;
        font-size: clamp(2rem, calc(5vw + 1rem), 4rem );
        font-weight: lighter;
        min-width: min-content;
        max-width: max-content;
        text-wrap: balance;
        animation-name: Title;
        animation-duration: 2s;
        animation-fill-mode: forwards;
        opacity: 0;
    }

    h2 {
        color: #FFF;
        text-align: center;
        font-size: clamp(1.5rem, calc(5vw + 1rem), 2.5rem );
        font-weight: lighter;
        min-width: min-content;
        max-width: max-content;
        text-wrap: balance;
        animation-name: Title;
        animation-duration: 2s;
        animation-delay: 1s;
        animation-fill-mode: forwards;
        opacity: 0;
        font-style: italic;
    }



@keyframes Title {
    from {opacity: 0}
    to {opacity: 1}
}

@media screen and (max-width: 800px) {
    main h2 {
        font-size: clamp(1rem, calc(1vw + 1rem), 2rem );
    }

    main p {
        font-size: 1rem;
        line-height: 1;
    }

    main {
        width: 90%;
    }

    section {
        padding: 1rem;
    }

    img {
        max-width: 90%;
        height: auto;
    }


}

</style>