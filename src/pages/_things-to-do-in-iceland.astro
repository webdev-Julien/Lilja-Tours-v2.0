---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import ExcuCards from "../layouts/ExcuCards.astro";
import "../styles/style.css"

import TopBar from "../components/TopBar__EN.astro";

import PicHeader from "../components/Pics/PicHeader.astro";
import FooterEN from "../components/footer__EN.astro";



const excurs__EN: CollectionEntry<"excurs__EN">[] = await getCollection("excurs__EN")

const rvkCult = excurs__EN.filter((excurs:any) =>  excurs.data.filter==="reykjavik" && excurs.data.filter2 === "culture")
const rvkHsprings = excurs__EN.filter((excurs:any) =>  excurs.data.filter==="reykjavik" && excurs.data.filter2 === "hotS")
const rvkMiniBus = excurs__EN.filter((excurs:any) =>  excurs.data.filter==="reykjavik" && excurs.data.filter2 === "bus")
const rvkWw = excurs__EN.filter((excurs:any) =>  excurs.data.filter==="reykjavik" && excurs.data.filter2 === "ww")




---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="Discover luxury private day tours in Iceland. Explore stunning landscapes with exclusive, tailor-made experiences. Book now!">


       <link rel="alternate" hreflang="fr" href="https://www.lilja-tours.com/fr/toutes-nos-excursions/" />
       <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
       <link rel="canonical" href="https://www.lilja-tours.com/things-to-do-iceland/">

        <meta property="og:title" content="Discover all of our private tours">
        <meta property="og:type" content="website">
        <meta property="og:image" content="https://www.lilja-tours.com/pictures/excursions/whale-watching-reykjavik-mobile-pc.webp">
        <meta property="og:url" content="https://www.lilja-tours.com/things-to-do-iceland">
        <meta property="og:description" content="Discover Iceland on your own and book excursions with our renowned partners along the way!">

        <meta property="og:locale" content="en_US">
        <meta property="og:locale:alternate" content="fr_FR">
        <meta property="og:image:width" content="1200">
        <meta property="og:image:height" content="630">
        <meta property="og:logo" content="/logos/Lilja-Tours-Full-Logo.png" />

        <title>Book excursions in Iceland </title>

        <slot name="jsonld"></slot>

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=AW-16894749666">
</script>
<script is:raw>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'AW-16894749666');
</script>

    </head>

    <header class="header">
        <TopBar linkfr="/fr/toutes-nos-excursions"></TopBar>
        <div class="headerContainerPic">
            <PicHeader srcMobile="/pictures/excursions/whale-watching-reykjavik-mobile.webp" srcPC="/pictures/excursions/whale-watching-reykjavik-pc.webp" alt="Picture of stunning waterfalls in desertic landscapes" title="All of our day tours in Iceland"></PicHeader></div>
            <div class="headerGradient"></div>
            <div class="headerInfos">
                <h1>Explore Iceland on your own</h1>
                <h2>Book your excursion with one of our trusted partners all around Iceland</h2>
                <p class="headerP">At <strong>Lilja Tours</strong>, we do not offer self-drive tour. Yet, for those interested in discovering the country fully independently, we provide the possibility to book the best excursions and tours with renowned tour-operators that we have been working with for years now. This curated list allows you to pick only the best possible activities, and at a better price, thanks to our promocode: <strong>LILJA5</strong>, that you may use upon booking. Happy exploration!</p>
            </div>
           
        </div>
    </header>

    <main>
        <div class="firstText">
            <h2>Excursions from Reykjavík:</h2>
            <p>All the below excursions offer a departure from Reykjavík. Some of them might require to go to a specific location, while others will offer pickup options. Explore our selection of Whale Watching tours, museums, shows, hot spring admissions and even helicopter tours.</p>
         </div>

         <h3>Day tours: Shared departures</h3>
         <div class="wrapper">
        {rvkMiniBus.map((excu:any) => (


        <ExcuCards
excu = {excu}
>

</ExcuCards>
))}
       

         <h3>Hot Springs</h3>
         <div class="wrapper">
        {rvkHsprings.map((excu:any) => (


        <ExcuCards
excu = {excu}
>

</ExcuCards>
))}
         <h3>Cultural Experiences</h3>
         <div class="wrapper">
        {rvkCult.map((excu:any) => (


        <ExcuCards
excu = {excu}
>

</ExcuCards>
))}

    </div>
    <h3>Whale Watching Tours</h3>
    <div class="wrapper">
        {rvkWw.map((excu:any) => (


            <ExcuCards
    excu = {excu}
    >
    
    </ExcuCards>
    ))}

</div>

    <div class="firstText">
        <h2>Excursions in the rest of Iceland:</h2>
        <p>As you are exploring the country and wondering about what to do between two visits of our gorgeous landscapes while far away from the capital area, look no further! We are working with businesses all around the island, take your pick! </p>
     </div>

     <div class="wrapper">
    {excurs__EN.filter((baba:any) => (baba.data.filter==="country")).map((excu:any) => (


    <ExcuCards
excu = {excu}
>

</ExcuCards>
))}

</div>
    </main>


<FooterEN></FooterEN>
</body>


</html>

<style>

h3 {
  color: white;
  font-size: clamp(1.25rem, 3vw, 2.5rem);
  font-weight: lighter;
  width: 95%;
  margin: 5rem auto;
  text-align: left;
}

    .headerP {
        width: 50%;
        margin-inline: auto;
    }

    .firstText {
        width: calc(100% - 4rem);
        margin: 2rem auto;
        padding: 2rem;
        background-color: rgba(255, 255, 255, 0.25);
        border-radius: 1rem;

        p {
            width: 100%;
        }
    }

    main h2 {
        margin-bottom: 3rem;
        width: 100%;
        text-align: center;
        margin-inline: auto;
        font-style: normal;
    }

    h2:not(:first-child) {
        margin-block: 5rem;
    }

   main {
    width: 90%;
    margin-inline: auto;
    padding: 5rem 0;
   }

.wrapper {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    justify-content: center;

}
  .header {
            min-height: 100dvh;
            width: 100%;
        }

        .headerContainerPic {
            width: 100%;
            min-height: calc(100dvh - 3.5rem);
            max-height: calc(100dvh - 3.5rem);
            position: relative;
        }

        .headerGradient {
            width: 100%;
            min-height: calc(100dvh - 3.5rem);
            max-height: calc(100dvh - 3.5rem);
            position: absolute;
            top: 3.5rem;
            background: linear-gradient(180deg, rgba(0, 0, 0, 0.75) 0%, rgba(255, 255, 255, 0.00) 99.06%);
        }

        .headerInfos {
            position: absolute;
            inset: 3.5rem 0 0 0;
            display: flex;
            height:  calc(100dvh - 3.5rem);
            flex-direction: column;
            justify-content: center;
            align-items: center;
            align-content: center;
            gap: 5rem;

        }

        h1 {
        color: #FFF;
        text-align: center;
        font-size: clamp(2rem, calc(5vw + 1rem), 4rem );
        font-weight: lighter;
        min-width: min-content;
        max-width: max-content;
        text-wrap: balance;
        animation-name: Title;
        animation-duration: 2s;
        animation-fill-mode: forwards;
        opacity: 0;
    }

    h2 {
        color: #FFF;
        text-align: center;
        font-size: clamp(1.5rem, calc(5vw + 1rem), 2.5rem );
        font-weight: lighter;
        min-width: min-content;
        max-width: max-content;
        text-wrap: balance;
        animation-name: Title;
        animation-duration: 2s;
        animation-delay: 1s;
        animation-fill-mode: forwards;
        opacity: 0;
        font-style: italic;
    }

@keyframes Title {
    from {opacity: 0}
    to {opacity: 1}
}

@media screen and (max-width: 800px) {
    main h2 {
        font-size: clamp(1rem, calc(1vw + 1rem), 2rem );
    }

    main p {
        font-size: 1rem;
    }

    main {
        padding-block: 2rem;
    }

    .headerInfos {
        gap: 1rem;
    }

    header h2 {
        margin-block: 2rem;
        width: 95%;
    }

    .wrapper {
        width: 95%;
        margin-inline: auto;
    }

    .firstText {
        width: 95%;
    }

    .headerP {
        width: 75%;
        margin-inline: auto;
    }


}

</style>