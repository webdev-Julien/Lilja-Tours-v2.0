<style>

a, a:visited {
        text-decoration: underline;
        color: white;
    }

    .quote {
        width: 15rem;
        height: 5rem;
        flex-shrink: 0;
        border-radius: 1rem;
        border: 2px solid hsla(0, 0%, 100%, 0.5);
        background: rgba(0, 0, 0, 0.30);
        backdrop-filter: blur(7.5px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        flex-shrink: 0;
        cursor: pointer;
        transition: .5s;
        text-align: center;

    }

    .quote > p, .quote > a {
        text-align: center;
    }

    .book {
        color: white;
        text-align: center;
        font-size: 1.5rem;
        font-weight: lighter;
        width: 100%;
        margin: 0;
    }


    .quote:hover, .quote:focus {
        background: rgba(255, 255, 255, 0.50);
        border: 2px solid rgba(0, 0, 0, 0.30);
        transition: .5s;

        .book {
        color: rgba(0, 0, 0, 0.50);
        }

    }


    section {
        background-color: rgba(255, 255, 255, 0.75);
        margin: 5rem auto;
        padding: 3rem;
        
        border-radius: 1rem;

        h2 {
            font-style: normal;
            font-weight: bold;
            color:rgb(91, 114, 151);
            animation: none;
            opacity: 1;
        }

        h3 {
            color:rgb(91, 114, 151);

        }

        p {
            color: black;
        }

        strong {
            font-weight: normal;
        }
    }

    img {
        border-radius: 1rem;
        display: flex;
        margin: 2rem auto;

    }


    main {
        width: 75%;
        margin-inline: auto;
        padding-block: 5rem;
    }

    .header {
            min-height: 100dvh;
            width: 100%;
        }

        .headerContainerPic {
            width: 100%;
            min-height: calc(100dvh - 3.5rem);
            max-height: calc(100dvh - 3.5rem);
            position: relative;
        }

        .headerGradient {
            width: 100%;
            min-height: calc(100dvh - 3.5rem);
            max-height: calc(100dvh - 3.5rem);
            position: absolute;
            top: 3.5rem;
            background: linear-gradient(180deg, rgba(0, 0, 0, 0.75) 0%, rgba(255, 255, 255, 0.00) 99.06%);
        }

        .headerInfos {
            position: absolute;
            inset: 3.5rem 0 0 0;
            display: flex;
            height:  calc(100dvh - 3.5rem);
            flex-direction: column;
            justify-content: center;
            align-items: center;
            align-content: center;
            gap: 5rem;

        }

        h1 {
        color: #FFF;
        text-align: center;
        font-size: clamp(2rem, calc(5vw + 1rem), 4rem );
        font-weight: lighter;
        min-width: min-content;
        max-width: max-content;
        text-wrap: balance;

    }

    main h2 {
        color: #FFF;
        font-size: clamp(1.5rem, calc(5vw + 1rem), 2.5rem );
        font-weight: lighter;
        min-width: min-content;
        max-width: max-content;
        text-wrap: balance;
        font-style: italic;
        text-align: left;
        margin-bottom: 1rem;
    }



@media screen and (max-width: 800px) {
    main h2 {
        font-size: clamp(1rem, calc(1vw + 1rem), 2rem );
    }

    main p {
        font-size: 1rem;
        line-height: 1;
    }

    main {
        width: 90%;
    }

    section {
        padding: 1rem;
    }

    img {
        max-width: 90%;
        height: auto;
    }

    header p {
        font-size: 1rem;
        width: 95%;
        margin-inline: auto;
    }


}

</style>