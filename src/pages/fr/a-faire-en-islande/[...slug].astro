---
import "../../../styles/md-3.css"

import ExcupageEN from "../../../layouts/Excupage__FR.astro";

import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
    const daytours__EN: CollectionEntry<"excurs__FR">[] = await getCollection("excurs__FR")
    return daytours__EN.map(entry => ({
        params: {
            slug: entry.slug+"/"
        },
        props: {entry}
    }))
}

const { entry } = Astro.props

const {Content} = await entry.render()
---

<ExcupageEN
language="fr"
description = {entry.data.metaDescription}
fulllinkFr= {entry.data.hrefLang}
ogTitle= {entry.data.pageTitle}
ogImage= {entry.data.pageCover.srcPC}
url= {"https://www.lilja-tours.com/fr/a-faire-en-islande/"+entry.slug+"/"}
pageTitle= {entry.data.pageTitle}
linkFr= {entry.data.linkFr}
headerCoverSrcMobile= {entry.data.pageCover.srcMobile}
headerCoverSrcPC= {entry.data.pageCover.srcPC}
headerCoverAlt= {entry.data.pageCover.alt}
headerCoverTitle= {entry.data.pageCover.title}
tourTitle= {entry.data.title1}
subTitle= {entry.data.title2}
rate= {entry.data.rate}

>
<Content/>
</ExcupageEN>
