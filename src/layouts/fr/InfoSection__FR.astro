---
const {gtk, wtb, i, ni}=Astro.props
---

<section id="info">
    <div class="wrapper">
    <h2>Information</h2>
    <div class="listContainer">
        <ul>
            <li><h3>Bon Ã  savoir</h3></li>
            {
                gtk.map((bas:any) => {
        
                    return (
        
                       <li>{bas}</li>               
                    )
                })
            }

        </ul>

        <ul>
            <li><h3>Que prendre avec vous?</h3></li>
            {
                wtb.map((bas:any) => {
        
                    return (
        
                       <li>{bas}</li>               
                    )
                })
            }

        </ul>

        <ul>
            <li><h3>Inclus:</h3></li>
            {
                i.map((bas:any) => {
        
                    return (
        
                       <li>{bas}</li>               
                    )
                })
            }
        </ul>

        <ul>
            <li><h3>Non inclus:</h3></li>
            {
                ni.map((bas:any) => {
        
                    return (
        
                       <li>{bas}</li>               
                    )
                })
            }

        </ul>
