---
import { Image } from "astro:assets";
import calendar from "../assets/icons/calendar-white.svg"
import hourglass from "../assets/icons/hourglass-white.svg"
import level from "../assets/icons/difficulty-white.svg"
import groupSize from "../assets/icons/group-size-white.svg"

const {
    cardImageSrc,
    cardImageAlt,
    cardImageTitle,
    cardTitle,
    jeepISK,
    jeepUSD,
    jeepEUR,
    tourSeason,
    tourDuration,
    tourDifficulty,
    tourCapacity
} = Astro.props

---

<article>
    <div class="picWrap">
        <div class="pic">
            <img src={cardImageSrc} alt={cardImageAlt} title={cardImageTitle} loading="lazy" width="500" height="338">
        </div>
        <div class="picOverlay">
           <!-- <slot name="cardTextContent"></slot>-->
            <p>Enjoy the most famous tour in Iceland. Visit sites of exception such as Gullfoss, geysir and Thingvellir.Enjoy the most famous tour in Iceland. Visit sites of exception such as Gullfoss, geysir and Thingvellir.Enjoy the most famous tour in Iceland. Visit sites of exception such as Gullfoss, geysir and Thingvellir.

                Enjoy the most famous tour in Iceland. Visit sites of exception such as Gullfoss, geysir and Thingvellir.</p>
        </div>
    </div>
    <div class="textInfos">
        <h2>{cardTitle}</h2>
            <div class="rates">
                <p class="startingFrom">Starting from:</p>
                <p class="rateISK">{jeepISK} ISK <span>/vehicle</span></p>
                <p class="approx"><em>Approx. {jeepUSD} $ or {jeepEUR} â‚¬</em></p>
            </div>
            <div class="infos">

                <div class="info">
                    <Image src={calendar} alt="Calendar icon" width="15" height="15"  class="icon"></Image>
                    <p class="pictoText">: {tourSeason}</p>
                </div>
                <div class="info">
                    <Image src={hourglass} alt="hourglass icon" width="15" height="15"  class="icon"></Image>
                    <p class="pictoText">: Approx. {tourDuration} h</p>
                </div>
                <div class="info"> 
                    <Image src={level} alt="level icon" width="15" height="15"  class="icon"></Image>
                    <p class="pictoText">: {tourDifficulty}</p>
                </div>
                <div class="info">
                    <Image src={groupSize} alt="group icon" width="15" height="15"  class="icon"></Image>
                    <p class="pictoText">: {tourCapacity} maximum</p>
                </div>

            </div>
            <div class="tags">
                <slot name="tags"></slot>
            </div>
    </div>
</article>

<style>

    article {
        background-color: #292929;
        filter: drop-shadow(0 0 0.75rem #000000);
        width: fit-content;
        height: fit-content;
        max-width: 32rem;
    }

    img {
        display: block;
        min-width: 100%;
        max-width: 100%;
    }

    .picwrap {
        position: relative;
    }



    .picOverlay {
        position: absolute;
        inset: 0;
    }

    .textInfos {
        display: flex;
        flex-direction: column;
    }

    .info {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }




    .infos {
        display: flex;
        width: 100%;
        margin-inline: auto;
        justify-content: flex-start;
        align-items: center;
        gap: 1rem
    }

    h2 {
        color: white;
        text-decoration: underline;
        font-weight: normal;
        font-size: 2rem;
        margin-bottom: .75rem;
    }

    p {
        margin: 0    
    }

    .startingFrom {
        color: white;
        font-size: .75rem;
    }

    .approx {
        color: white;
        font-size: .75rem;
    }

    .rateISK {
        color: #A3B9E1;
        font-weight: normal;
        font-size: 2rem;
    }

    .rates > p   {
        line-height: 1;
    }

    .pictoText {
        font-size: .75rem;    
    }



</style>