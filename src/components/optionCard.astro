---
const {optionPic,
    optionAlt,
    optionPicTitle,
    sumup,
    day,
    optionName
} = Astro.props
---

<article class="card">
        <img src={optionPic} alt={optionAlt} width="500" height="500" title={optionPicTitle} loading="lazy" class="backCard">
        <div class="texts">
            <p class="sumup">{sumup}</p>
            <p class="day">Day {day}:</p>
            <h4 class="option">{optionName}</h4>
        </div>
</article>

<style>
    .card {
        border-radius: 1rem;
        aspect-ratio: 1 / 1;
        position: relative;
        max-width: 25rem;


        .backCard {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            border-radius: 1rem;
        }

        .texts {
            display: flex;
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding-inline: 2rem;
            border-radius: 1rem;

            .day {
                font-weight: lighter;
            }
            .option {
                font-weight: bold;
            }


            .day, .option {
                font-size: clamp(1rem, 5vw, 2rem);
                text-align: center;
                color: white;
            }
            .sumup {
                display: none;
            }
        }
    }

        .card:hover {
        border-radius: 1rem;
        aspect-ratio: 1 / 1;
        position: relative;

        .texts {
            background-color: rgba(255, 255, 255, 0.8);
        }

        .texts .day, .texts .option{
           display: none;
        }

        .sumup {
            display: block;
            color: black;
        }
    }

    .card * {
        transition: .3s;
    }

</style>