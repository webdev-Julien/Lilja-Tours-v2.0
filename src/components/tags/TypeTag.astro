---
const {tagLink, tagType} = Astro.props;
---
<a href={tagLink}>
<button>
    <p>{tagType}</p>
</button></a>

<style>
    button {
        background-color: rgba(91, 114, 151, 0.16);
        color: white;
        border: none;
        border-radius: 99999px;
        padding: .25rem .5rem .5rem .5rem;
        display: flex;
        align-items: center;
        margin-top: 1rem;
        width: 7.5rem;
        cursor: pointer;
        transition: .5s;

    }

    p {
        margin: 0 auto;
        line-height: 1;
        font-size: 1rem;
        
    }

    
   button:hover {
        background-color: #5B7297;
        transition: .5s;
    }

</style>