---
const {home, cateLink} = Astro.props
---
<nav>
    <ul>
        <li><a href={cateLink} title="Back to main category" class="homeLink">{home}</a> &gt; </li>
        <slot></slot>
    </ul>
</nav>

<style>
nav {
    height: 3rem;
    padding: .6rem 0 .5rem 4rem;
    width: 100%;
    background-color: rgba(41, 41, 41, 0.75);
    position: sticky;
    top: 0;
    z-index: 99999;

    ul {
        list-style-type: none;
        list-style-position: inside;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        flex-wrap: wrap;
        gap: 1rem
    }

    li {
        color: white;
    }

    a {
        text-decoration: none;
        color: white;
        text-underline-offset: 0;
        transition: .3s;

    }

    .homeLink:hover {
        text-decoration: underline;
        text-underline-offset: .25rem;
        transition: .3s;
    }
}

@media only screen and (max-width: 800px) {
        nav {
            padding: .6rem 0 .5rem 1rem;
            height: fit-content;
            ul {
                gap: .5rem
            }
        }

    }
</style>