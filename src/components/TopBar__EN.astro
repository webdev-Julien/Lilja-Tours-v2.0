---
import { Picture } from "astro:assets";
const {linkfr} = Astro.props;
import frenchflag from "../assets/icons/french.svg"
import logo from "../assets/logos/lilja-tours-logo-transparent.png"
import burger from "../assets/icons/hamburger-menu.svg"
import CloseButton from "./buttons/CloseButton.astro"
import Logo from "../assets/logos/Lilja-Tours.png"
---

<div class="topbar">

    <Picture src={logo} alt="Lilja Tours logo" class="logoTopBar" width="160" height="32"></Picture>

    <nav class="topBarMenu">
        <ul class="menuLinks">
            <li class="pc"><a href="#" class="menuLink" title="List of day tours">Day Tours</a></li>
            <li class="pc"><a href="#" class="menuLink" title="List of multiday tours">MultiDay Tours</a></li>
            <li class="pc"><a href="#" class="menuLink" title="List of excursions">On your own</a></li>
            <li class="pc"><a href="#" class="menuLink" title="About Lilja Tours">About</a></li>
            <li class="pc"><a href={linkfr} class="menuLink" title="Voir en français / See in french"><Picture src={frenchflag} alt="french flag / drapeau français" title="french/français" class="flag" width="100" height="32"></a></li>
            <li class="mobile"><a href="#" class="menuLink" title="Voir en français / See in french"><Picture src={burger} alt="Open menu" title="Open the menu" class="burger" width="32" height="32"></a></li>
            
        </ul>
    </nav>

    <!--MOBILE MENU -->

</div>
<div class="rectangleMenu mobile">
    <CloseButton></CloseButton>
    <div class="logoCont">
    <Picture src={Logo} alt="Logo Lilja Tours" title="Retour page d'accueil" loading="lazy" width="270" height="80" class="menuLogo"></Picture>
    </div>
    <nav class="menuNavMobile">
        <ul class="menuLinks menuLinksMobile">
            <li class="mobile"><a href="#" class="menuLinkMobile" title="List of day tours">Day Tours</a></li>
            <li class="mobile"><a href="#" class="menuLinkMobile" title="List of multiday tours">MultiDay Tours</a></li>
            <li class="mobile"><a href="#" class="menuLinkMobile" title="List of excursions">On your own</a></li>
            <li class="mobile"><a href="#" class="menuLinkMobile" title="About Lilja Tours">About</a></li>
            <li class="mobile"><a href={linkfr} class="menuLinkMobile" title="Voir en français / See in french"><Picture src={frenchflag} alt="french flag / drapeau français" title="french/français" class="flag" width="100" height="32"></a></li>
        </ul>
    </nav>
    <nav class="socials">
        <ul class="socialsLinks">
            <li class="social"></li>
            <li class="social"></li>
            <li class="social"></li>
            <li class="social"></li>
        </ul>
    </nav>
    
</div>

<style>
    :root {
        --topBarHeight: 3.5rem;
    }

    /*TOPBAR*/
    .topbar {
        width: 100%;
        background-color: hsl(0, 0%, 20%, 1);
        padding-block: 1rem;
        padding-inline: 2rem;
        display: flex;
        justify-content: space-between;
        max-height: var(--topBarHeight);
        align-items: center;

    }

    .menuLinks {
        list-style-position: inside;
        list-style-type: none;
        display: flex;
        justify-content: space-evenly;
        width: 100%;
        height: 100%;
        align-items: center;

    }

    .topBarMenu {
        width: 50%;
        height: var(--topBarHeight);
    }

    .flag {
        width: 2rem;
    }

    .burger {
        width: 2rem;
        height: 2rem;
    }

    .logoTopBar {
        max-width: 10rem;
        height: auto;
        aspect-ratio: 5 / 1;
    }

    .menuLink {
        color: white;
        text-decoration: none;
        font-size: clamp(1rem, calc(2vw+1rem), 2rem);
        text-underline-offset: .4rem;
        height: 100%;
        transition: .5s;
        display: flex;
        align-items: center;
    }


    li {
        display: flex;
        align-items: center;
        padding: 1rem;
        height: 100%;
    }

    .menuLink:hover, .menuLink:focus {
        text-decoration: underline;
        text-underline-offset: .3rem;
        transition: .5s;
    }

    .mobile {
        display: none;
    }

    .pc {
        display: block;
    }

    /*MENUMOBILE*/

    .rectangleMenu {
        width: 100dvw;
        height: calc(100dvh - var(--topBarHeight));
        background-color: white;
        border: .1rem solid #292929;
        position:fixed;
        top: var(--topBarHeight);
        background-color: hsl(0, 100%, 100%, .8);
        backdrop-filter: blur(10px);
    }

    .logoCont {
        width: 100%;
        margin-top: 3rem;
    }

    .menuLogo {
        width: 75%;
        height: auto;
        margin-inline: auto;

    }

    .menuNavMobile {
        display: flex;
        flex-direction: column;
        width: 80%;
        margin-inline: auto;
        height: 75%;
        margin-block: .75rem;
        align-items: center;
    }

    .menuLinkMobile {
        color: #292929;
        text-decoration: none;
        font-size: 2rem;
        text-underline-offset: .4rem;
        height: 100%;
        transition: .5s;
        display: flex;
        align-items: center;
    }

    .menuLinkMobile:hover {
        text-decoration: underline;
        text-underline-offset: .4rem;
    }

    .menuLinks.menuLinksMobile {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    @media only screen and (max-width: 1000px) {

        .pc {
            display: none;
        }

        .mobile {
            display: block;
        }

        li.mobile {
            display: flex;
            padding: 0;
            align-items: center;
        }

        .menuLink {
            display: flex;
            align-items: center;
        }

        .menuLinks {
            justify-content: flex-end;
        }

        .topbar {
            padding-inline: 1rem;
        }
        
    }


</style>

